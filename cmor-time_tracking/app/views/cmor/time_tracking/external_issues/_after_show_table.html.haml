.card.mb-4
  .card-header
    %i.fa.fa-table
    = @resource.issuetype.class.model_name.human
  .card-body
    = resource_table(resource: @resource.issuetype) do |t|
      = t.row :id
      = t.row :name
      = t.row :description
      = t.row :url
      = t.row :icon_url
      = t.row :subtask
      = t.row :avatar_id
      = t.row :hierarchy_level


    = resource_table(resource: @resource.status) do |t|
      = t.row :id
      = t.row :description
      = t.row :icon_url
      = t.row :name do |r|
        - capture_haml do
          %span.badge.badge-pill.badge-primary
            = r.name
      = t.row :status_category
      = t.row :url

